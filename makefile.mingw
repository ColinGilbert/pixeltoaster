# pixeltoaster makefile for mingw (new source code layout)

flags = -s -O3 -Wall -ffast-math -mwindows -ld3d9

source := PixelToaster.cpp
headers := $(wildcard PixelToaster*.h)

PixelToaster.exe : PixelToaster.cpp ${headers} makefile.mingw
	g++ $< -o PixelToaster.exe ${flags}

all: PixelToaster.exe

documentation : ${source} ${headers} doxygen.config
	doxygen doxygen.config
	
docs : documentation
	
clean:
	rm -rf PixelToaster.exe documentation
