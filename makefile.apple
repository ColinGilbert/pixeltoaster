# pixeltoaster makefile (new source code layout)

flags = -O3 -Wall -Isource -framework CoreServices -L/usr/X11R6/lib -lX11

headers := $(wildcard PixelToaster*.h)

% : %.cpp ${headers} makefile
	g++ $< -o $@ ${flags}

all: PixelToaster

documentation : PixelToaster.h ${headers} doxygen.config
	doxygen doxygen.config
	
docs : documentation

test : Test
	./Test
	
clean:
	rm -rf PixelToaster documentation
